<?xml version="1.0"?>
<object name="portal_skins" default_skin="Weblion IST Theme">

 <object name="ist_theme_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.ist_theme:skins/ist_theme_images"/>
 <object name="ist_theme_templates"
    meta_type="Filesystem Directory View"
    directory="plonetheme.ist_theme:skins/ist_theme_templates"/>
 <object name="ist_theme_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.ist_theme:skins/ist_theme_styles"/>

 <skin-path name="Weblion IST Theme" based-on="Plone Default">
  <layer name="ist_theme_images"
     insert-after="custom"/>
  <layer name="ist_theme_templates"
     insert-after="ist_theme_images"/>
  <layer name="ist_theme_styles"
     insert-after="ist_theme_templates"/>
 </skin-path>

</object>
